{
  "name": "simple-rtmp-server",
  "version": "1.0.0",
  "description": "A simple RTMP server for receiving live streams with AI classification",
  "main": "server.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start:js": "node src/server.js",
    "dev": "nodemon --ignore data/ --exec ts-node src/server.ts",
    "dev:js": "nodemon src/server.js",
    "build": "tsc",
    "classify": "ts-node src/imageClassifier.ts",
    "notify": "ts-node src/telegramNotifier.ts"
  },
  "dependencies": {
    "node-media-server": "^2.6.0",
    "node-fetch": "^2.7.0",
    "mime-types": "^2.1.35",
    "adm-zip": "^0.5.10",
    "form-data": "^4.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "@types/node": "^20.10.6",
    "@types/node-fetch": "^2.6.9",
    "@types/mime-types": "^2.1.4",
    "@types/adm-zip": "^0.5.5",
    "@types/form-data": "^2.5.2"
  },
  "keywords": [
    "rtmp",
    "streaming",
    "live",
    "server",
    "ai",
    "classification",
    "nvidia",
    "telegram"
  ],
  "author": "",
  "license": "MIT"
}
